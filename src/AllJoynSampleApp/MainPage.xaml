                                </Grid>
                                <StackPanel>
                                    <TextBlock Text="{Binding DeviceName}" FontSize="18" FontWeight="Bold" />
                                    <TextBlock Text="{Binding Manufacturer}" />
                                </StackPanel>
                                <TextBlock Text="{Binding ModelNumber}" VerticalAlignment="Bottom" />
                            </Grid>
                        </DataTemplate>
                    </local:TemplateEntry>
